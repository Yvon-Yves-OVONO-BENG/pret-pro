{% extends 'base.html.twig' %}

{% block title %}
   {% trans %}Liste des clients{% endtrans %}
{% endblock %}

{% block stylesheets %}
	<style>
		th,
		tfoot {
			font-size: 15px !important;
			text-align: center !important;
			font-weight: bold !important;
			background-color: #F1F1F1 !important;
		}

		tr:hover {
			background-color: rgba(62, 128, 235, 0.2) !important;
			color: #3e80eb !important;
		}

        td {
			font-size: 12px !important;
			text-align: center !important;
		}
	</style>
{% endblock %}



{% block body %}
<!-- App-Content -->
<div class="hor-content main-content">
	<div class="container">

		<!--Page header-->
		<div class="page-header">
			<div class="page-leftheader">
				<h4 class="page-title mb-0 text-primary">
					<i class="fa fa-users me-2"></i> {% trans %}Clients enregistrés {% endtrans %}
				</h4>
			</div>
			<div class="page-rightheader">
				<div class="btn-list">
					<a href="javascript:void(0);" class="btn btn-outline-primary">
						<i class="fe fe-printer me-2"></i>
						{% trans %}Imprimer{% endtrans %}
					</a>
					
				</div>
			</div>
		</div>
		<!--End Page header-->

		<!--Row-->
		<div class="row">
			<div class="col-xl-12 col-lg-12 col-md-12">
				<div class="card border-primary">
					<div class="card-header">
						<div class="col-xl-8 col-lg-8 col-md-8">
							<h3 class="card-title"><i class="fa fa-users me-2"></i>{% trans %}Clients enregistrés{% endtrans %}</h3>
						</div>
						<div class="col-xl-4 col-lg-4 col-md-4 text-right">
							
								<button class="btn btn-outline-primary">
									<span>{% trans %}Nombres de clients{% endtrans %}</span>
									<span class="badge bg-primary rounded-pill">{{ clients|length }}</span>
								</button>
							
						</div>
					</div>
					<div class="card-body">
						<div class="table-responsive">
							<table class="table table-bordered table-striped card-table table-vcenter text-nowrap" id="datatable">
								<thead>
									<tr>
										<th>{% trans %}N°{% endtrans %}</th>
										<th>{% trans %}Clients{% endtrans %}</th>
										<th>{% trans %}Contact{% endtrans %}</th>
										<th>{% trans %}Adresse{% endtrans %}</th>
										<th>{% trans %}Email{% endtrans %}</th>
										<th>{% trans %}Opérations{% endtrans %}</th>
									</tr>
								</thead>
								<tfoot>
									<tr>
										<th>{% trans %}N°{% endtrans %}</th>
										<th>{% trans %}Clients{% endtrans %}</th>
										<th>{% trans %}Contact{% endtrans %}</th>
										<th>{% trans %}Adresse{% endtrans %}</th>
										<th>{% trans %}Email{% endtrans %}</th>
										<th>{% trans %}Opérations{% endtrans %}</th>
									</tr>
									</tr>
								</tfoot>
								<tbody>
									{% set i = 1 %}
									{% for client in clients %}
										<tr>
											<td><span class="badge bg-primary rounded-pill">{{ i }}</span></td>
											<td>
												<a class="font-weight-normal1" href="">{{ client.nomClient }}</a> <br>
											</td>
											<td>
												<a class="font-weight-normal1" href="">{{ client.contactClient }}</a> <br>
											</td>
											<td>
												<a class="font-weight-normal1" href="">{{ client.adresseClient }}</a> <br>
											</td>
											<td>
												<a class="font-weight-normal1" href="">{{ client.emailClient }}</a> <br>
											</td>
											
											<td>
												<a class="btn btn-outline-primary" href="javascript:void(0);"><i class="fe fe-printer me-2"></i> {% trans %}Imprimer ses factures{% endtrans %}</a>
												
											</td>
										</tr>
										{% set i = i + 1 %}
									{% endfor %}
									
									
								</tbody>
							</table>
							
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- End app-content-->
<script src="{{ asset ('js/activerDesactiverPrisEnCharge.js')}}"></script>
{% endblock %}
