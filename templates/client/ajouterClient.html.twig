{% extends 'base.html.twig' %}

{% block title %}
    {% if code == 0 %}
        {% trans %}Ajouter un client{% endtrans %}
        {% else %}
        {% trans %}Modification d'un client{% endtrans %}
    {% endif %}    
{% endblock %}

{% block body %}
<!-- App-Content -->
				<div class="hor-content main-content">
					<div class="container">

						<!--Page header-->
						<div class="page-header">
							<div class="page-leftheader">
								<h4 class="page-title mb-0 text-primary">
                                    {% if code == 0 %}
                                        <i class="fe fe-plus me-2"></i>
                                        {% trans %}Enregistrement d'un client{% endtrans %}
                                        {% else %}
                                        <i class="fe fe-edit me-2"></i>
                                        {% trans %}Modification d'un client{% endtrans %}
                                    {% endif %}
                                </h4>
							</div>
							<div class="page-rightheader">
								<div class="btn-list">
									<a href="{{ path ('afficher_client', {'a': 1 }) }}" class="btn btn-outline-primary">
                                        <i class="fe fe-list me-2"></i>
										{% trans %}Afficher les Clients{% endtrans %}
                                    </a>
									
								</div>
							</div>
						</div>

                        {% if code == 0 %}
                            <div class="card border-primary">
                            {% else %}
                            <div class="card border-danger">
                        {% endif %}
                            <div class="card-header">
                                <h3 class="card-title">
                                    {% if code == 0 %}
                                        <i class="fe fe-plus me-2"></i>
                                        {% trans %}Ajouter un client{% endtrans %}
                                        {% else %}
                                        <i class="fe fe-edit me-2"></i>
                                        {% trans %}Modification du client : {% endtrans %} {{ client.nom }}
                                    {% endif %}
                                    
                                </h3>
                            </div>
                            <div class="card-body ">
                                {{ form_start(formClient, {'attr': {'class':'row g-4 needs-validation', 'novalidate':""}})}}
                                    <div class="row" style="margin-top: 15px !important;">
                                        
                                        <div class="col-md-4 position-relative">
                                            <label for="validationCustom01" class="form-label">{% trans %}Nom du client{% endtrans %}</label>
                                            {{ form_widget(formClient.nom, {'attr': {'id':'validationCustom01'}}) }}

                                            <div class="invalid-feedback">
                                                {% trans %}Veuillez saisir le nom du client client !{% endtrans %}
                                            </div>
                                        </div>

                                        <div class="col-md-4 position-relative">
                                            <label for="validationCustom01" class="form-label">{% trans %}Date de naissance{% endtrans %}</label>
                                            {{ form_widget(formClient.dateNaissanceAt, {'attr': {'id':'validationCustom01'}}) }}

                                            <div class="invalid-feedback">
                                                {% trans %}Veuillez saisir la date de naissance du client !{% endtrans %}
                                            </div>
                                        </div>

                                        <div class="col-md-4 position-relative">
                                            <label for="validationCustom01" class="form-label">{% trans %}Ville de résidence{% endtrans %}</label>
                                            {{ form_widget(formClient.villeResidence, {'attr': {'id':'validationCustom01'}}) }}

                                            <div class="invalid-feedback">
                                                {% trans %}Veuillez saisir la ville de résidence du client !{% endtrans %}
                                            </div>
                                        </div>
                                    </div>
                                     <div class="row" style="margin-top: 15px !important;">
                                        <div class="col-md-4 position-relative">
                                            <label for="validationCustom01" class="form-label">{% trans %}Société{% endtrans %}</label>
                                            {{ form_widget(formClient.societe, {'attr': {'id':'validationCustom01'}}) }}

                                            <div class="invalid-feedback">
                                                {% trans %}Veuillez sélectionner la société du client !{% endtrans %}
                                            </div>
                                        </div>

                                        <div class="col-md-4 position-relative">
                                            <label for="validationCustom01" class="form-label">{% trans %}Pays{% endtrans %}</label>
                                            {{ form_widget(formClient.pays, {'attr': {'id':'validationCustom01'}}) }}

                                            <div class="invalid-feedback">
                                                {% trans %}Veuillez sélectionner le pays du client !{% endtrans %}
                                            </div>
                                        </div>

                                        <div class="col-md-4 position-relative text-center" style="margin-top: 30px !important;">
                                            <button type="submit" class="btn btn-outline-primary btn-md">
                                                <i class="fe fe-save"></i> 
                                                {% if code == 0 %}
                                                    {% trans %}Enregistrer{% endtrans %}
                                                    {% else %}
                                                    {% trans %}Enregistrer les modifications{% endtrans %}
                                                {% endif %}
                                            </button>
                                        </div>
                                    </div>
                                        
                                {{ form_end(formClient)}}

                            </div>
                        
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
