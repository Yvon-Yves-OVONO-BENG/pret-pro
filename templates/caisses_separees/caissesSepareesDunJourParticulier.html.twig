{% extends 'base.html.twig' %}

{% block title %}Caisses Separées d'un jour particulier{% endblock %}

{% block stylesheets %}
	<style>
		th,
		tfoot {
			font-size: 15px !important;
			text-align: center !important;
			font-weight: bold !important;
			background-color: #F1F1F1 !important;
		}

		.infoTable {
			text-align: center !important;
			vertical-align: middle !important;
		}

		tr:hover {
			background-color: rgba(62, 128, 235, 0.2) !important;
			color: #3e80eb !important;
		}

        td {
			font-size: 12px !important;
			text-align: center !important;
		}
	</style>
{% endblock %}

{% block body %}
<!-- App-Content -->
<div class="hor-content main-content">
    <div class="container">
        <!--Page header PRODUITS-->
        <div class="page-header">
            <div class="page-leftheader">
                <h4 class="page-title mb-0 text-primary"><i class="fa fa-money me-2"></i>{% trans %}Veuillez saisir la date du jour dont vous voulez afficher les recettes{% endtrans %} </h4>
            </div>
            <div class="page-rightheader">
                <div class="btn-list">
                    {# <a href="javascript:void(0);"  class="btn btn-outline-primary btn-pill">
                        <i class="si si-printer me-2 fs-14"></i>
                        {% trans %}Imprimer les recettes du jour{% endtrans %}
                    </a> #}
                    {# <a href="javascript:void(0);" target="_blank" class="btn btn-outline-primary"><i class="fe fe-printer me-2"></i> {% trans %}Imprimer{% endtrans %}</a> #}
                    
                </div>
            </div>
        </div>
        <!--End Page header-->

        {# FORMULAIRE SAISI DATE DU JOUR  #}
        <div class="row">
			<div class="col-xl-12 col-lg-12 col-md-12">
				<div class="card border-primary">
					<div class="card-header">
						<div class="col-xl-6 col-lg-6 col-md-6">
							<h3 class="card-title">{% trans %}Veuillez Saisir la date dont vous voulez afficher les recettes{% endtrans %}</h3>
						</div>
						<div class="col-xl-6 col-lg-6 col-md-6">
							<form method="post" action="{{ path ('caisses_separees_d_un_jour_particulier') }}" class="row g-3 needs-validation" novalidate>
								<div class="col-md-4 position-relative">
                                    <input type="date" name="dateDuJour" class="form-control" id="validationCustom01" required>
                                    <div class="invalid-feedback">
                                        {% trans %}Veuillez saisir le date du jour donné{% endtrans %}
                                    </div>
								</div>
								<div class="col-md-4">
								    <button class="btn btn-outline-primary" type="submit" name="afficher"><i class="si si-eye me-2"></i>{% trans %}Afficher{% endtrans %}</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
        {# FIN FORMULAIRE SAISI DATE DU JOUR  #}

        {% if afficher == true %}
            {% include "includes/_caissesSeparees.html.twig" %}
        {% endif %}
        
    </div>
</div>
</div>
{% endblock %}
