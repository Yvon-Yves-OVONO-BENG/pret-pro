{% extends 'base.html.twig' %}

{% block title %}Caisses Separées{% endblock %}

{% block stylesheets %}
	<style>
		th,
		tfoot {
			font-size: 15px !important;
			text-align: center !important;
			font-weight: bold !important;
			background-color: #F1F1F1 !important;
		}

		.infoTable {
			text-align: center !important;
			vertical-align: middle !important;
		}

		tr:hover {
			background-color: rgba(62, 128, 235, 0.2) !important;
			color: #3e80eb !important;
		}

        td {
			font-size: 12px !important;
			text-align: center !important;
		}
	</style>
{% endblock %}

{% block body %}
<!-- App-Content -->
<div class="hor-content main-content">
    <div class="container">
        <!--Page header PRODUITS-->
        <div class="page-header">
            <div class="page-leftheader">
                <h4 class="page-title mb-0 text-primary"><i class="fa fa-money me-2"></i>{% trans %}Recettes des produits du jour{% endtrans %} : {{ aujourdhui|date('d-m-Y') }}</h4>
            </div>
            <div class="page-rightheader">
                <div class="btn-list">
                    {# <a href="javascript:void(0);"  class="btn btn-outline-primary btn-pill">
                        <i class="si si-printer me-2 fs-14"></i>
                        {% trans %}Imprimer les recettes du jour{% endtrans %}
                    </a> #}
                    {# <a href="javascript:void(0);" target="_blank" class="btn btn-outline-primary"><i class="fe fe-printer me-2"></i> {% trans %}Imprimer{% endtrans %}</a> #}
                    {% set recetteDuJour = 0 %}
                    {% for factureDuJour in facturesDuJour %}
                        {% set recetteDuJour = recetteDuJour + factureDuJour.avance %}
                    {% endfor %}
                    <button type="button" class="btn btn-primary mt-1 mb-1 me-3">
                        <span class="badge bg-white text-dark">{{ recetteDuJour|number_format }} </span>
                        <span>FCFA</span>
                    </button>
                </div>
            </div>
        </div>
        <!--End Page header-->
        
        <!-- DONNEES DE LA RECCETTE DU JOUR -->
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12">
                <div class="card border-primary">
                    <div class="card-header">
                        <div class="col-md-4">
                            <h3 class="card-title">{% trans %}Recettes d'aujourd'hui{% endtrans %}</h3>
                        </div>
                        <div class="col-md-4"></div>
                        <div class="col-md-4 text-right">
                            <button type="button" class="btn btn-primary mt-1 mb-1 me-3">
                                <span class="badge bg-white text-dark">{{ facturesDuJour | length }}</span>
                                <span>{% trans %}enregistrée(s){% endtrans %}</span>
                            </button>
                                
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped card-table table-vcenter text-nowrap" id="datatable">
                                <thead>
                                    <tr>
                                        <th class="wd-15p border-bottom-0">
                                            <i class="fa fa-star"></i> {% trans %}N°{% endtrans %}
                                        </th>
                                        <th class="wd-15p border-bottom-0">
                                            <i class="fa fa-user"></i> {% trans %}Caissière{% endtrans %}
                                        </th>
                                        <th class="wd-15p border-bottom-0">
                                            <i class="fa fa-houzz"></i> {% trans %}Référence{% endtrans %}
                                        </th>
                                        <th class="wd-15p border-bottom-0">
                                            <i class="fa fa-credit-card"></i> Mode paiement
                                        </th>
                                        <th class="wd-10p border-bottom-0">
                                            <i class="fa fa-calculator"></i> {% trans %}Net à payer{% endtrans %}
                                        </th>
                                        <th class="wd-10p border-bottom-0">
                                            <i class="fa fa-calculator"></i> {% trans %}Avance{% endtrans %}
                                        </th>
                                        <th class="wd-10p border-bottom-0">
                                            <i class="fa fa-calculator"></i> {% trans %}Reste{% endtrans %}
                                        </th>
                                        
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                         <th class="wd-15p border-bottom-0">
                                            <i class="fa fa-star"></i> {% trans %}N°{% endtrans %}
                                        </th>
                                        <th class="wd-15p border-bottom-0">
                                            <i class="fa fa-user"></i> {% trans %}Caissière{% endtrans %}
                                        </th>
                                        <th class="wd-15p border-bottom-0">
                                            <i class="fa fa-houzz"></i> {% trans %}Référence{% endtrans %}
                                        </th>
                                        <th class="wd-15p border-bottom-0">
                                            <i class="fa fa-credit-card"></i> Mode paiement
                                        </th>
                                        <th class="wd-10p border-bottom-0">
                                            <i class="fa fa-calculator"></i> {% trans %}Net à payer{% endtrans %}
                                        </th>
                                        <th class="wd-10p border-bottom-0">
                                            <i class="fa fa-calculator"></i> {% trans %}Avance{% endtrans %}
                                        </th>
                                        <th class="wd-10p border-bottom-0">
                                            <i class="fa fa-calculator"></i> {% trans %}Reste{% endtrans %}
                                        </th>
                                        
                                    </tr>
                                </tfoot>
                                <tbody>
                                    {% set i = 1 %}
                                    {% for factureDuJour in facturesDuJour %}
                                        <tr>
                                            <td class="infoTable">
                                                <span class="badge badge-default">{{ i }}</span>
                                            </td>
                                            <td class="infoTable">

                                                <button type="button" class="btn btn-primary btn-sm btn-block position-relative me-5 mb-2">
                                                    {{ factureDuJour.caissiere.nom }}
                                                </button>
                                                
                                            </td>

                                            <td class="infoTable">
                                                <a href="javascript:void(0);" class="btn btn-primary">{{ factureDuJour.reference}}</a>
                                            </td>

                                            <td class="infoTable">
                                                {% if factureDuJour.modePaiement.modePaiement == 'CASH' %}
                                                    <span class="bg-success px-2 py-1 text-white br-7">{{ factureDuJour.modePaiement.modePaiement  }} </span>
                                                    {% else %}
                                                    {% if factureDuJour.modePaiement == 'PRIS EN CHARGE' %}
                                                        <span class="bg-info px-2 py-1 text-white br-7">{{ factureDuJour.modePaiement.modePaiement  }} </span>
                                                        {% else %}
                                                        <span class="bg-danger px-2 py-1 text-white br-7">{{ factureDuJour.modePaiement.modePaiement  }} </span>
                                                    {% endif %}
                                                {% endif %}
                                            </td>
                                            <td class="infoTable" style="vertical-align: middle !important;">
                                                <h5><span class="badge badge-default">{{ factureDuJour.netAPayer }} FCFA</span></h5>
                                            </td>
                                            <td class="infoTable" style="vertical-align: middle !important;">
                                                <h5><span class="badge badge-default">{{ factureDuJour.avance }} FCFA</span></h5>
                                            </td>
                                            <td class="infoTable" style="vertical-align: middle !important;">
                                                <h5><span class="badge bg-danger">{{ factureDuJour.netAPayer - factureDuJour.avance }} FCFA</span></h5>
                                            </td>
                                            
                                            
                                            
                                        </tr>
                                        {% set i = i + 1 %}
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Row-1 -->

        <!--Page header RECETTE DES KITS DU JOUR-->
